<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder />
    <import resource="${MOKAI_DB_ENGINE:derby}-context.xml" />
    
    <!-- Camel Routing Engine - Lifecycle -->
    <bean id="routingEngineLifecyle" class="org.mokai.impl.camel.RoutingEngineLifecycle" init-method="start" destroy-method="stop">
        <property name="routingEngine" ref="routingEngine"/>
        <property name="applicationsConfiguration" ref="applicationsConfiguration"/>
        <property name="connectionsConfiguration" ref="connectionsConfiguration"/>
    </bean>
    <!--Jesque-->
    <bean id="jesqueUri" class="org.mokai.web.admin.jogger.helpers.Uri">
        <constructor-arg value="${JESQUE_URL:jesque://localhost:6379}" />
    </bean>
    <bean id="jesqueConfig" class="net.greghaines.jesque.Config">
        <constructor-arg name="host" value="#{ @jesqueUri.getHost() }" />
        <constructor-arg name="port" value="#{ @jesqueUri.getPort() }" />
        <constructor-arg name="password" value="#{ @jesqueUri.getPassword() }" />
        <constructor-arg name="namespace" value="resque" />
        <constructor-arg name="database" value="0" />
        <constructor-arg name="timeout" value="7000" />
    </bean>
    <bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
        <property name="testOnBorrow" value="true" />
        <property name="minIdle" value="1" />
        <property name="maxIdle" value="10" />
        <property name="maxActive" value="15" />
        <property name="maxWait" value="30000" />
    </bean>

    <bean id="jedisPool" class="redis.clients.jedis.JedisPool">
        <constructor-arg name="poolConfig" ref="jedisPoolConfig"/>
        <constructor-arg name="host" value="#{ @jesqueUri.getHost() }" />
        <constructor-arg name="port" value="#{ @jesqueUri.getPort() }" />
        <constructor-arg name="password" value="#{ @jesqueUri.getPassword() }" />
        <constructor-arg name="timeout" value="7000"/>
    </bean>

    <bean id="jesqueClient" class="net.greghaines.jesque.client.ClientPoolImpl">
        <constructor-arg name="config"  ref="jesqueConfig"/>
        <constructor-arg name="jedisPool" ref="jedisPool" />
    </bean>

    <!-- Routing Engine -->
    <bean id="connectorServiceChangeListener" class="org.mokai.web.admin.jogger.AsyncConnectorServiceChangeListener" />

    <bean id="routingEngine" class="org.mokai.impl.camel.CamelRoutingEngine">
        <constructor-arg ref="jmsComponent" />
        <constructor-arg ref="jesqueClient" />
        <property name="messageStore" ref="messageStore"/>
        <property name="connectorServiceChangeListener" ref="connectorServiceChangeListener" />
    </bean>
	
    <bean id="pluginMechanism" class="org.mokai.plugin.jpf.JpfPluginMechanism" init-method="configure" destroy-method="destroy" />
	
    <bean id="applicationsConfiguration" class="org.mokai.config.xml.ApplicationsConfiguration">
        <property name="routingEngine" ref="routingEngine"/>
        <property name="pluginMechanism" ref="pluginMechanism"/>
    </bean>
	
    <bean id="connectionsConfiguration" class="org.mokai.config.xml.ConnectionsConfiguration">
        <property name="routingEngine" ref="routingEngine"/>
        <property name="pluginMechanism" ref="pluginMechanism"/>
    </bean>
	
    <bean id="faileMessagesMonitor" class="org.mokai.impl.camel.FailedMessagesMonitor" init-method="start" destroy-method="stop">
        <property name="routingEngine" ref="routingEngine"/>
        <property name="delay" value="30000" />
    </bean>
	
    <bean id="broker" class="org.apache.activemq.xbean.BrokerFactoryBean">
        <property name="config" value="classpath:activemq.xml" />
        <property name="start" value="true" />
    </bean>
	
    <bean id="activeMQConnectionFactory" class="org.apache.activemq.pool.PooledConnectionFactory" depends-on="broker" destroy-method="stop">
        <constructor-arg value="vm://mokai-broker" />
        <property name="maxConnections" value="8" />
        <property name="maximumActiveSessionPerConnection" value="500" />
    </bean>
	
    <bean id="jmsTransactionManager" class="org.springframework.jms.connection.JmsTransactionManager">
        <constructor-arg ref="activeMQConnectionFactory"/>
    </bean>
	
    <bean id="jmsConfiguration" class="org.apache.camel.component.jms.JmsConfiguration">
        <property name="deliveryPersistent" value="true" />
        <property name="transacted" value="true" />
        <property name="transactionManager" ref="jmsTransactionManager" />
        <property name="connectionFactory" ref="activeMQConnectionFactory" />
    </bean>
	
    <bean id="jmsComponent" class="org.apache.camel.component.jms.JmsComponent">
        <constructor-arg ref="jmsConfiguration"/>
    </bean>
</beans>